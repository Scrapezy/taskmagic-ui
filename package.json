{
  "name": "taskmagic-ui",
  "version": "0.1.0",
  "description": "Terminal dashboard for Task Magic project management system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "taskmagic-ui": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:platform": "node scripts/test-platform.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --check src/**/*.ts",
    "format:fix": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "task-management",
    "terminal",
    "dashboard",
    "project-management",
    "cli",
    "tui",
    "task-magic"
  ],
  "author": "Scrapezy Team",
  "license": "MIT",
  "homepage": "https://github.com/scrapezy/taskmagic-ui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scrapezy/taskmagic-ui.git"
  },
  "bugs": {
    "url": "https://github.com/scrapezy/taskmagic-ui/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^9.27.0",
    "globals": "^16.2.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "semantic-release": "^22.0.12",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.33.0"
  },
  "dependencies": {
    "@types/blessed": "^0.1.25",
    "@types/commander": "^2.12.0",
    "@types/js-yaml": "^4.0.9",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "chokidar": "^3.0.0",
    "commander": "^11.1.0",
    "gray-matter": "^4.0.0",
    "ink": "^4.0.0",
    "js-yaml": "^4.1.0",
    "react": "^18.0.0",
    "yaml": "^2.0.0"
  },
